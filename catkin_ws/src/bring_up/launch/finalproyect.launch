<launch>
  <param name="robot_description" textfile="$(find bring_up)/urdf/justina_simple.urdf" />
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="world_name" value="$(find bring_up)/worlds/apartment_fast.world"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find bring_up)/rviz/localization.rviz"/>
  <node name="simple_gui" pkg="simple_gui" type="simple_gui_node"/>
  <node name="mobile_base" pkg="mobile_base_simul" type="mobile_base_simul.py"/>
  <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(find bring_up)/maps/appartment.yaml"/>

  <node name="Localization" pkg="students" type="practice08" output="screen" >
       <param name="min_x" value = "-0.5"/>
       <param name="max_x" value = "0.5"/>
       <param name="min_y" value = "-0.5"/>
       <param name="max_y" value = "0.5"/>
  </node>


  <node name="speech_recog" pkg="pocketsphinx" type="asr_test.py">
     <remap from="jsgf_audio" to="sphinx_audio" />
     <param name="gram" value="$(find pocketsphinx)/vocab/movement"/>
     <param name="dict" value="$(find pocketsphinx)/vocab/movement.dic"/>
     <param name="grammar" value="movement"/>
     <param name="rule" value="mvn"/>
     <param name="lm" value=":default"/>
     <param name="hmm" value=":default"/>
  </node>

  <node name="audio_control" pkg="pocketsphinx" type="send_audio.py" output="screen">
    <param name="input" value=":default"/>
  </node>


 <node name="sound_play" pkg="sound_play" type="sound_play_node.py" output="screen" />
 <node name="say" pkg="sound_play" type="say.py" output="screen" />
    

  <node name="Inflation" pkg="students" type="practice03.py" output="screen" />
  <node name="Smooth" pkg="students" type="practice04.py" output="screen" />
  <node name="Control" pkg="students" type="practice05.py" output="screen" />
  <node name="Proyecto" pkg="students" type="proyecto.py" output="screen" />

</launch>
