<launch>
  <param name="robot_description" textfile="$(find bring_up)/urdf/justina_simple.urdf" />
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="world_name" value="$(find bring_up)/worlds/apartment_fast.world"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find bring_up)/rviz/localization.rviz"/>
  <node name="mobile_base" pkg="mobile_base_simul" type="mobile_base_simul.py"/>
  <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(find bring_up)/maps/appartment.yaml"/>

  <group ns="practices">
    <node name="practice03" pkg="students" type="practice03.py" output="screen"/>
      <param name="/navigation/path_planning/cost_radius" value="0.6"/>
      <param name="/navigation/path_planning/inflation_radius" value="0.15"/>
    <node name="practice04" pkg="students" type="practice04.py" output="screen"/>
      <param name="/navigation/path_planning/smoothing_alpha" value="0.01"/>
      <param name="/navigation/path_planning/smoothing_beta" value="0.9"/>
    <node name="practice05" pkg="students" type="practice05.py" output="screen"/>
    <node name="practice08" pkg="students" type="practice08" output="screen"/>
      <param name="min_x" value="-0.5"/>
      <param name="max_x" value="0.5"/>
      <param name="min_y" value="-0.5"/>
      <param name="max_y" value="0.5"/>
    <node name="final_project" pkg="students" type="final_project.py" output="screen"/>

  </group>

  <node name="speech_recog" pkg="pocketsphinx" type="asr_test.py" output="screen">
    <remap from="jsgf_audio" to="sphinx_audio" />
    <param name="gram" value="$(find pocketsphinx)/vocab/movement"/>
    <param name="dict" value="$(find pocketsphinx)/vocab/movement.dic"/>
    <param name="grammar" value="movement"/>
    <param name="rule" value="mvn"/>
    <param name="lm" value=":default"/>
    <param name="hmm" value=":default"/>
  </node>

  <node name="audio_control" pkg="pocketsphinx" type="send_audio.py" output="screen">
    <param name="input" value=":default"/>
  </node>

  <node name="SoundPlay" pkg="sound_play" type="soundplay_node.py" output="screen"/>

</launch>
